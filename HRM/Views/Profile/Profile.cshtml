@{
    ViewBag.Title = "Trang cá nhân";
}
@{
    var countHis = 1;
    var countSal = 1;
}
@model HRM.DTO.EmployeeInfo

<div class="page-breadcrumb bg-white">
    <div class="row align-items-center">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Thông tin cá nhân</h4>
        </div>

    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- ============================================================== -->
<!-- End Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- Container fluid  -->
<!-- ============================================================== -->
<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <!-- Row -->
    <div class="row">
        <!-- Column -->
        <div class="col-lg-4 col-xlg-3 col-md-12">
            <div class="white-box">
                <div class="user-bg">
                    <img width="100%" alt="user" src="~/Content/plugins/images/users/3.png">
                    <div class="overlay-box">
                        <div class="user-content">
                            <a href="javascript:void(0)">
                                <img src="~/Content/plugins/images/users/2.png"
                                     class="thumb-lg img-circle" alt="img">
                            </a>
                            <h4 class="text-white mt-2">@Model.employee.EmployeeName</h4>
                            <h5 class="text-white mt-2">@Model.employee.Email</h5>
                        </div>
                    </div>
                </div>
                <div class="d-flex">
                    <div class="user-btm-box mt-5 d-md-flex flex-column justify-content-lg-between">
                        <div class="">
                            <h5>Phòng ban</h5>
                        </div>
                        <div class="">
                            <h5>Vị trí</h5>
                        </div>
                        <div class="">
                            <h5>Chức vụ</h5>
                        </div>
                        <div class="">
                            <h5>Trạng thái</h5>
                        </div>
                    </div>
                    <div class="user-btm-box mt-5 d-md-flex flex-column justify-content-lg-between px-md-4">
                        <div class="">
                            <h5>
                                @switch (Model.employee.DepartmentId)
                                {
                                    case 1:
                                        @:Nhân sự
                                        break;
                                    case 2:
                                        @:Sản phẩm
                                        break;
                                    case 3:
                                        @:Kỹ thuật
                                        break;
                                    case 4:
                                        @:Tài chính
                                        break;
                                    case 5:
                                        @:Hỗ trợ
                                        break;
                                    default:

                                        break;
                                }
                            </h5>
                        </div>
                        <div class="">
                            <h5>
                                @switch (Model.employee.JobtitleId)
                                {
                                    case 1:
                                        @:Database Analyst
                                        break;
                                    case 2:
                                        @:AI
                                        break;
                                    case 3:
                                        @:Android
                                        break;
                                    case 4:
                                        @:HR
                                        break;
                                    case 5:
                                        @:BackEnd
                                        break;
                                    case 6:
                                        @:FontEnd
                                        break;
                                    case 7:
                                        @:Điều hành
                                        break;
                                    default:

                                        break;
                                }
                            </h5>
                        </div>
                        <div class="">
                            <h5>
                                @switch (Model.employee.PositionId)
                                {
                                    case 1:
                                        @:Thử Việc
                                        break;
                                    case 2:
                                        @:Nhân Viên
                                        break;
                                    case 3:
                                        @:Thời Vụ
                                        break;
                                    case 4:
                                        @:Thực Tập
                                        break;
                                    case 5:
                                        @:Giám đốc
                                        break;
                                    case 6:
                                        @:Trưởng phòng
                                        break;
                                    case 7:
                                        @:Phó phòng
                                        break;
                                    default:

                                        break;
                                }
                            </h5>
                        </div>
                        <div class="">
                            <h5>
                                @switch (Model.employee.Status)
                                {
                                    case 0:
                                        @:Đã nghỉ việc
                                        break;
                                    default:
                                        @:Đang làm việc
                                        break;

                                }
                            </h5>


                        </div>


                    </div>


                </div>


            </div>


        </div>


        <!-- Column -->
        <!-- Column -->


        <div class="col-lg-8 col-xlg-9 col-md-12">
            <div class="card">
                <div class="card-body">
                    <form class="form-horizontal form-material">
                        <div class="form-group mb-4">
                            <label class="col-md-12 p-0">Họ và tên</label>
                            <div class="col-md-12 border-bottom p-0">
                                <input type="text" value="@Model.employee.EmployeeName"
                                       class="form-control p-0 border-0" readonly>
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <label for="example-email" class="col-md-12 p-0">Email</label>
                            <div class="col-md-12 border-bottom p-0">
                                <input type="email" value="@Model.employee.Email"
                                       class="form-control p-0 border-0" name="example-email"
                                       id="example-email" readonly>
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <label class="col-md-12 p-0">Địa chỉ</label>
                            <div class="col-md-12 border-bottom p-0">
                                <input type="text" value="@Model.employee.Address" class="form-control p-0 border-0" readonly>
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <label class="col-md-12 p-0">Số điện thoại</label>
                            <div class="col-md-12 border-bottom p-0">
                                <input type="text" value="@Model.employee.PhoneNumber"
                                       class="form-control p-0 border-0" readonly>
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <label class="col-md-12 p-0">Tiểu sử</label>
                            <div class="col-md-12 border-bottom p-0">
                                <textarea rows="5" class="form-control p-0 border-0"></textarea>
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <div class="col-sm-12">
                                <a class="btn btn-success" href="@Url.Action("LogOut","LogIn")">Đăng xuất</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Column -->
    </div>
    <ul class="nav nav-pills">
        <li class="active"><a data-toggle="pill" href="#home">Quá trình công tác</a></li>
        <li><a data-toggle="pill" href="#menu1">Quá trình lương</a></li>

    </ul>

    <div class="tab-content">
        <div id="home" class="tab-pane fade in active">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Mã nhân viên</th>
                        <th>Tên nhân viên</th>
                        <th>Ngày bắt đầu</th>
                        <th>Ngày kết thúc</th>
                        <th>Phòng ban</th>
                        <th>Chức vụ</th>
                        <th>Vị trí công việc</th>
                        <th>Mô tả</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.employeeHistories)
                    {
                        <tr>
                            <td>@countHis</td>
                            <td>@item.EmployeeId</td>
                            <td>@item.EmployeeName</td>
                            <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                            <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                            <td>@item.DepartmentName</td>
                            <td>@item.PositionName</td>
                            <td>@item.JobtitleName</td>
                            <td>@item.Decription</td>
                        </tr>
                        countHis++;
                    }

                </tbody>
            </table>
        </div>
        <div id="menu1" class="tab-pane fade">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Mã nhân viên</th>
                        <th>Tên nhân viên</th>
                        <th>Ngày bắt đầu</th>
                        <th>Ngày kết thúc</th>
                        <th>Lương cứng</th>
                        <th>Phụ cấp</th>
                        <th>Trạng thái</th>
                        <th>Mô tả</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.salaryFixes)
                    {
                        <tr>
                            <td>@countSal</td>
                            <td>@item.EmployeeId</td>
                            <td>@item.EmployeeName</td>
                            <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                            <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                            <td>@item.Money.ToString("#,##0;-#,##0")</td>
                            <td>@item.Bonus.ToString("#,##0;-#,##0")</td>
                            <td>@Html.Raw(item.Status == true ? "Khả dụng" : "Không khả dụng")</td>
                            <td>@item.Decription</td>

                        </tr>
                        countSal++;

                    }

                </tbody>
            </table>
        </div>

    </div>
</div>